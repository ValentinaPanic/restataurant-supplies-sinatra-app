<h3> <%= current_user.manager_name %>, you are successfully logged in! </h3>

<form action="/products/new" method="post"   
  <input type="submit" value="Continue"/>
  <h3 class="user-product"><%= current_user.restaurant_name %> Order</h3>
<a class="add-new-product" href="/products/new"><button type="button">Add a new product</button></a>
<p>
    <table>
        <thead>
            <tr>
                <th colspan="1">Name:</th>
                <th colspan="1">Quantity:</th>
                <th colspan="1">Vendor Name:</th>
            </tr>
        </thead>
        <tbody>
            <% current_user.products.each do |product| %>
                <tr>
                    <td><a href="/products/<%= product.id %>"><%= product.name %></a></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.vendor_name %></td>
                </tr>
            <% end %>
        </tbody>
    </table>


<p><a href="/logout">Log Out</a></p>